<form action="/reviews/<%=@review.id%>" method="post">
  <fieldset>
    <legend>Edit Your Restaurant Review Below:</legend>
    <input type="text" name="rest_name" id="rest_name" value="<%=@review.rest_name%>"><br></br>
      <textarea id="content" name="content" rows="5" cols="98"><%=@review.content%>
      </textarea>
      <br></br>
    <input type="text" name="cuisine" id="cuisine" value="<%=@review.cuisine%>"><br></br>
      Your current rating is "<%=@review.rating%>."</br><!--NEED if statment to show or hide current rating-->
      Please choose Rating from the following (4) choices:<!--"<%=@review.rating%>" checked="<%= @review.rating == 'excellent'%>"-->
      <input type="radio" name="rating" value="Excellent" checked="<% @review.rating == '@review.rating'%>"><label for="Excellent"> Excellent</label>
      <input type="radio" name="rating" value="Good" checked="<% @review.rating == '@review.rating'%>"><label for="Good"> Good</label>
      <input type="radio" name="rating" value="Average" checked="<% @review.rating == '@review.rating'%>"><label for="Average"> Average</label>
      <input type="radio" name="rating" value="Poor" checked="<% @review.rating == '@review.rating'%>"><label for="Poor"> Poor</label><br></br>
    <input type="submit" id="submit" value="Save Review">
  </fieldset>
  <input type="hidden" id ="hidden" name="_method" value="PATCH">
</form><br></br>
<a href="/">Home</a>
